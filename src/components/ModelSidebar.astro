---
interface Props {
  models: string[];
  currentModel?: string;
  currentGen?: string;
  currentPage?: "dashboard" | "model" | "generation";
  showTabs?: boolean;
  activeTab?: "simple" | "cot";
  simpleGenCount?: number;
  cotGenCount?: number;
}

const {
  models,
  currentModel,
  currentGen,
  currentPage = "model",
  showTabs = false,
  activeTab = "simple",
  simpleGenCount = 30,
  cotGenCount = 6,
} = Astro.props;

// Generate arrays for generation links
const simpleGens = Array.from(
  { length: simpleGenCount },
  (_, i) => `gen${i + 1}`
);
const cotGens = Array.from({ length: cotGenCount }, (_, i) => `gen${i + 1}`);

const showGens = currentModel || currentPage === "dashboard";
---

<aside class="sidebar" data-current-page={currentPage}>
  <div class="nav-header">
    <a
      href="/"
      class:list={["nav-link", { active: currentPage === "dashboard" }]}
      class="border text-center"
    >
      Dashboard
    </a>
  </div>

  {
    showTabs && (
      <div class="mode-selector">
        <button
          type="button"
          class:list={[
            "mode-btn",
            { active: currentPage !== "dashboard" && activeTab === "simple" },
          ]}
          data-mode="simple"
        >
          Simple
        </button>
        <button
          type="button"
          class:list={[
            "mode-btn",
            { active: currentPage !== "dashboard" && activeTab === "cot" },
          ]}
          data-mode="cot"
        >
          CoT
        </button>
      </div>
    )
  }

  {
    showGens && (
      <div
        class="gens-section"
        data-gens="simple"
        class:list={{ hidden: activeTab !== "simple" }}
      >
        <div class="section-header">
          <span class="section-title">Generations</span>
        </div>
        <ul class="gen-list">
          <li>
            <a
              href={
                currentPage === "dashboard"
                  ? "#"
                  : `/models/${currentModel?.toLowerCase()}`
              }
              class:list={[
                "gen-link",
                "all-btn",
                {
                  active:
                    currentPage !== "dashboard" &&
                    !currentGen &&
                    activeTab === "simple",
                },
              ]}
              data-gen="all"
            >
              All
            </a>
          </li>
          {simpleGens.map((g) => (
            <li>
              <a
                href={
                  currentPage === "dashboard"
                    ? "#"
                    : `/models/${currentModel?.toLowerCase()}/${g}`
                }
                class:list={[
                  "gen-link",
                  { active: currentGen === g && activeTab === "simple" },
                ]}
                data-gen={g}
              >
                {g.replace("gen", "")}
              </a>
            </li>
          ))}
        </ul>
      </div>
    )
  }

  {
    showGens && (
      <div
        class="gens-section"
        data-gens="cot"
        class:list={{ hidden: activeTab !== "cot" }}
      >
        <div class="section-header">
          <span class="section-title">CoT Generations</span>
        </div>
        <ul class="gen-list">
          <li>
            <a
              href={
                currentPage === "dashboard"
                  ? "#"
                  : `/models/${currentModel?.toLowerCase()}?type=cot`
              }
              class:list={[
                "gen-link",
                "all-btn",
                {
                  active:
                    currentPage !== "dashboard" &&
                    !currentGen &&
                    activeTab === "cot",
                },
              ]}
              data-gen="all"
            >
              All
            </a>
          </li>
          {cotGens.map((g) => (
            <li>
              <a
                href={
                  currentPage === "dashboard"
                    ? "#"
                    : `/models/${currentModel?.toLowerCase()}/${g}?type=cot`
                }
                class:list={[
                  "gen-link",
                  { active: currentGen === g && activeTab === "cot" },
                ]}
                data-gen={g}
              >
                {g.replace("gen", "")}
              </a>
            </li>
          ))}
        </ul>
      </div>
    )
  }

  <div class="models-section">
    <div class="section-title">Models</div>
    <nav>
      <ul>
        {
          models.map((model) => (
            <li>
              <a
                href={`/models/${model.toLowerCase()}`}
                class:list={[
                  "model-link",
                  {
                    active:
                      currentPage !== "dashboard" &&
                      currentModel?.toLowerCase() === model.toLowerCase(),
                  },
                ]}
                data-model={model.toLowerCase()}
              >
                {model}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</aside>

<style>
  .sidebar {
    width: 160px;
    flex-shrink: 0;
    background: #fafafa;
    border-right: 1px solid #e0e0e0;
    height: 100vh;
    position: sticky;
    top: 0;
    display: flex;
    flex-direction: column;
    overflow-y: auto;
  }

  .nav-header {
    padding: 0.75rem;
    border-bottom: 1px solid #e0e0e0;
  }

  .nav-link {
    display: block;
    padding: 0.5rem 0.75rem;
    color: #333;
    text-decoration: none;
    font-size: 0.8rem;
    font-weight: 500;
  }

  .nav-link:hover {
    background: #eee;
  }

  .nav-link.active {
    background: #111;
    color: #fff;
  }

  .mode-selector {
    display: flex;
    padding: 0.5rem;
    gap: 0.25rem;
    border-bottom: 1px solid #e0e0e0;
  }

  .mode-btn {
    flex: 1;
    padding: 0.4rem 0.5rem;
    font-size: 0.75rem;
    background: #f0f0f0;
    border: none;
    cursor: pointer;
    color: #555;
  }

  .mode-btn:hover {
    background: #e5e5e5;
  }

  .mode-btn.active {
    background: #333;
    color: #fff;
  }

  .gens-section {
    padding: 0.5rem;
    border-bottom: 1px solid #e0e0e0;
  }

  .gens-section.hidden {
    display: none;
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
  }

  .all-btn {
    font-weight: 500;
  }

  /* Make generation buttons expand to fill row width evenly */
  .gen-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(26px, 1fr));
    gap: 0.25rem;
    list-style: none;
    margin: 0;
    padding: 0;
    align-items: center;
  }

  .gen-list li {
    display: block;
  }

  .gen-link {
    display: inline-block;
    width: 100%;
    line-height: 26px;
    text-align: center;
    font-size: 0.7rem;
    color: #555;
    text-decoration: none;
    background: #f0f0f0;
    border-radius: 4px;
    box-sizing: border-box;
  }

  .gen-link:hover {
    background: #e0e0e0;
    color: #111;
  }

  .gen-link.active {
    background: #333;
    color: #fff;
  }

  .models-section {
    flex: 1;
    padding: 0.75rem;
  }

  .section-title {
    font-size: 0.65rem;
    font-weight: 600;
    color: #999;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  li {
    margin: 0;
  }

  .model-link {
    display: block;
    padding: 0.35rem 0.5rem;
    color: #555;
    text-decoration: none;
    font-size: 0.8rem;
  }

  .model-link:hover {
    background: #eee;
    color: #111;
  }

  .model-link.active {
    background: #333;
    color: white;
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .sidebar {
      width: 100%;
      height: auto;
      position: relative;
      flex-direction: row;
      flex-wrap: wrap;
    }

    .nav-header {
      border-bottom: none;
      border-right: 1px solid #e0e0e0;
    }

    .models-section {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .models-section ul {
      display: flex;
      flex-wrap: wrap;
      gap: 0.25rem;
    }
  }
</style>

<script>
  // Handle mode switching in sidebar
  document.addEventListener("DOMContentLoaded", () => {
    const modeBtns = document.querySelectorAll(".mode-btn");
    const gensSections = document.querySelectorAll(".gens-section");
    const tabContents = document.querySelectorAll(".tab-content");
    const tabs = document.querySelectorAll(".tab");
    const modelLinks = document.querySelectorAll(".model-link");
    const genLinks = document.querySelectorAll(".gen-link");

    const sidebar = document.querySelector(".sidebar");
    const isDashboard =
      sidebar?.getAttribute("data-current-page") === "dashboard";

    // Get current gen from URL path
    const pathParts = window.location.pathname.split("/");
    const currentGen = pathParts.find((p) => p.startsWith("gen"));
    const currentType =
      new URLSearchParams(window.location.search).get("type") || "simple";

    // Update gen link highlighting based on current mode
    function updateGenHighlighting(mode: string) {
      if (isDashboard) {
        // In dashboard, we don't clear selections based on URL, we respect manual selection
        const activeSection = document.querySelector(
          `.gens-section[data-gens="${mode}"]`
        );

        // Ensure visual state matches manual selection, but do NOT force default active if none selected
        return;
      }

      genLinks.forEach((link) => {
        const linkGen = link.getAttribute("data-gen");
        const isInCurrentSection =
          link.closest(".gens-section")?.getAttribute("data-gens") === mode;

        const isMatch =
          (currentGen && linkGen === currentGen) ||
          (!currentGen && linkGen === "all");

        if (isInCurrentSection && isMatch) {
          link.classList.add("active");
        } else {
          link.classList.remove("active");
        }
      });
    }

    // Dashboard-specific interactivity
    if (isDashboard) {
      // 1. Intercept Gen Clicks
      genLinks.forEach((link) => {
        link.addEventListener("click", (e) => {
          e.preventDefault();

          // Clear active from all gen links visible
          const section = link.closest(".gens-section");
          if (section) {
            section
              .querySelectorAll(".gen-link")
              .forEach((l) => l.classList.remove("active"));
          }

          link.classList.add("active");
        });
      });

      // 2. Intercept Model Clicks to navigate
      modelLinks.forEach((link) => {
        link.addEventListener("click", (e) => {
          e.preventDefault();
          const modelName = link.getAttribute("data-model");

          // Determine current mode
          const activeModeBtn = document.querySelector(".mode-btn.active");
          const mode = activeModeBtn
            ? activeModeBtn.getAttribute("data-mode")
            : "simple";

          // Determine selected gen in current mode
          const activeSection = document.querySelector(
            `.gens-section[data-gens="${mode}"]`
          );
          const activeGenLink = activeSection
            ? activeSection.querySelector(".gen-link.active")
            : null;
          const gen = activeGenLink
            ? activeGenLink.getAttribute("data-gen")
            : "all";

          let url = `/models/${modelName}`;
          if (gen && gen !== "all") {
            url += `/${gen}`;
          }
          if (mode === "cot") {
            url += `?type=cot`; // Append type param if CoT
          }

          window.location.href = url;
        });
      });
    }

    // Update model links to preserve current gen
    function updateModelLinks(mode: string) {
      if (isDashboard) return;

      modelLinks.forEach((link) => {
        const modelName = link.getAttribute("data-model");
        if (modelName && currentGen) {
          const typeParam = mode === "cot" ? "?type=cot" : "";
          link.setAttribute(
            "href",
            `/models/${modelName}/${currentGen}${typeParam}`
          );
        }
      });
    }

    modeBtns.forEach((btn) => {
      btn.addEventListener("click", () => {
        const mode = btn.getAttribute("data-mode") || "simple";

        // Update mode buttons
        modeBtns.forEach((b) => b.classList.remove("active"));
        btn.classList.add("active");

        // Update gens sections
        gensSections.forEach((section) => {
          if (section.getAttribute("data-gens") === mode) {
            section.classList.remove("hidden");
          } else {
            section.classList.add("hidden");
          }
        });

        // Update gen highlighting for the new mode
        updateGenHighlighting(mode);

        // Update model links to preserve gen
        updateModelLinks(mode);

        // Update main content tabs if they exist
        tabContents.forEach((content) => {
          if (content.getAttribute("data-content") === mode) {
            content.classList.add("active");
          } else {
            content.classList.remove("active");
          }
        });

        // Sync with header tabs if present
        tabs.forEach((tab) => {
          if (tab.getAttribute("data-tab") === mode) {
            tab.classList.add("active");
          } else {
            tab.classList.remove("active");
          }
        });
      });
    });

    // Also sync header tabs with sidebar mode buttons
    tabs.forEach((tab) => {
      tab.addEventListener("click", () => {
        const mode = tab.getAttribute("data-tab");
        modeBtns.forEach((btn) => {
          if (btn.getAttribute("data-mode") === mode) {
            (btn as HTMLElement).click();
          }
        });
      });
    });

    // Initialize based on URL params
    if (currentType === "cot") {
      const cotBtn = document.querySelector(
        '.mode-btn[data-mode="cot"]'
      ) as HTMLElement;
      if (cotBtn) cotBtn.click();
    } else {
      updateGenHighlighting("simple");
      updateModelLinks("simple");
    }
  });
</script>

<script is:inline>
  // Immediate state update to prevent flicker
  (function () {
    try {
      const params = new URLSearchParams(window.location.search);
      if (params.get("type") === "cot") {
        // Toggle Sidebar Buttons
        const simpleBtn = document.querySelector(
          '.mode-btn[data-mode="simple"]'
        );
        const cotBtn = document.querySelector('.mode-btn[data-mode="cot"]');
        if (simpleBtn) simpleBtn.classList.remove("active");
        if (cotBtn) cotBtn.classList.add("active");

        // Toggle Gen Sections
        const simpleGens = document.querySelector(
          '.gens-section[data-gens="simple"]'
        );
        const cotGens = document.querySelector(
          '.gens-section[data-gens="cot"]'
        );
        if (simpleGens) simpleGens.classList.add("hidden");
        if (cotGens) cotGens.classList.remove("hidden");

        // Apply active class to the correct generation link in CoT section
        const path = window.location.pathname;
        const genMatch = path.match(/gen\d+/);
        if (genMatch && cotGens) {
          const gen = genMatch[0];
          const activeLink = cotGens.querySelector(
            `.gen-link[data-gen="${gen}"]`
          );
          if (activeLink) activeLink.classList.add("active");
        } else if (cotGens) {
          const allLink = cotGens.querySelector('.gen-link[data-gen="all"]');
          if (allLink) allLink.classList.add("active");
        }
      }
    } catch (e) {}
  })();
</script>
