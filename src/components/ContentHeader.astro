---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<header class="content-header">
  <div class="header-left">
    <h1>{title}</h1>
  </div>
  <div class="header-right">
    <slot />
  </div>
</header>

<style>
  .content-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #e0e0e0;
    flex-wrap: wrap;
    gap: 1rem;
    min-height: 57px;
  }

  .header-left {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .header-right {
    display: flex;
    align-items: center;
  }

  h1 {
    font-size: 1.125rem;
    font-weight: 600;
    color: #111;
    margin: 0;
    line-height: 1.4;
  }

  @media (max-width: 768px) {
    .content-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .header-right {
      width: 100%;
    }
  }
</style>
