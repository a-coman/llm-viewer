---
interface ShannonEntry {
  attribute: string;
  values: Record<string, number>;
  evennessAll: number;
}

interface Props {
  data: ShannonEntry[];
  title?: string;
}

const { data, title } = Astro.props;

function getBarColor(evenness: number): string {
  const hue = evenness * 120; // 0 = red (low diversity), 120 = green (high diversity)
  return `hsl(${hue}, 65%, 55%)`;
}
---

<div class="shannon-container">
  {title && <h3 class="sober-label">{title}</h3>}

  {
    data.length === 0 ? (
      <p class="no-data">No enum attributes in this model</p>
    ) : (
      <div class="charts">
        {data.map((entry) => (
          <div class="attribute-chart">
            <div class="attribute-header">
              <span class="attribute-name">{entry.attribute}</span>
              <span
                class="evenness-badge"
                style={`background-color: ${getBarColor(entry.evennessAll)};`}
              >
                {(entry.evennessAll * 100).toFixed(0)}% even
              </span>
            </div>
            <div class="bars">
              {Object.entries(entry.values).map(([value, count]) => {
                const total = Object.values(entry.values).reduce(
                  (a, b) => a + b,
                  0
                );
                const percentage = total > 0 ? (count / total) * 100 : 0;
                return (
                  <div class="bar-row">
                    <span class="bar-label" title={value}>
                      {value}
                    </span>
                    <div class="bar-track">
                      <div
                        class="bar-fill"
                        style={`width: ${percentage}%; background-color: ${getBarColor(entry.evennessAll)};`}
                      />
                    </div>
                    <span class="bar-value">{count}</span>
                  </div>
                );
              })}
            </div>
          </div>
        ))}
      </div>
    )
  }
</div>

<style>
  .shannon-container {
    background: var(--color-background);
    border: 1px solid var(--color-border);
    padding: 1rem;
  }

  .sober-label {
    margin-bottom: 1rem;
    border-top: none; /* Already has container border */
  }

  .no-data {
    padding: 2rem;
  }

  .charts {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .attribute-chart {
    border-bottom: 1px solid var(--color-border-light);
    padding-bottom: 1rem;
  }

  .attribute-chart:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .attribute-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
  }

  .attribute-name {
    font-weight: 600;
    font-size: 0.8rem;
    color: var(--color-primary);
    font-family:
      ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
  }

  .evenness-badge {
    font-size: 0.7rem;
    padding: 0.125rem 0.5rem;
    color: white;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }

  .bars {
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
  }

  .bar-row {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .bar-label {
    flex: 0 0 120px;
    font-size: 0.75rem;
    color: var(--color-secondary);
    text-align: right;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .bar-track {
    flex: 1;
    height: 12px;
    background: var(--color-muted);
    overflow: hidden;
  }

  .bar-fill {
    height: 100%;
    transition: width 0.3s ease;
  }

  .bar-value {
    flex: 0 0 40px;
    font-size: 0.75rem;
    color: var(--color-primary);
    font-weight: 500;
    text-align: left;
  }
</style>
