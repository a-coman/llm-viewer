---
interface Props {
  segments: { label: string; href: string }[];
}

const { segments } = Astro.props;
---

<nav class="breadcrumbs" aria-label="Breadcrumb">
  <ol>
    <li>
      <a href="/">Dashboard</a>
    </li>
    {
      segments.map((segment, index) => (
        <li>
          <span class="separator">/</span>
          {index === segments.length - 1 ? (
            <span class="current">{segment.label}</span>
          ) : (
            <a href={segment.href}>{segment.label}</a>
          )}
        </li>
      ))
    }
  </ol>
</nav>

<style>
  .breadcrumbs {
    padding: 0.5rem 0;
  }

  ol {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 0.25rem;
  }

  li {
    display: flex;
    align-items: center;
  }

  a {
    color: #0066cc;
    text-decoration: none;
    font-size: 0.8rem;
  }

  a:hover {
    text-decoration: underline;
  }

  .separator {
    color: #999;
    margin: 0 0.375rem;
    font-size: 0.8rem;
  }

  .current {
    color: #666;
    font-size: 0.8rem;
  }
</style>
