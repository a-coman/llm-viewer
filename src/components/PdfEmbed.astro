---
interface Props {
  src: string;
  title?: string;
  height?: string;
  available?: boolean;
}

const {
  src,
  title = "PDF Document",
  height = "500px",
  available = true,
} = Astro.props;
---

{
  available ? (
    <div class="pdf-container">
      {title && <div class="pdf-header">{title}</div>}
      <iframe
        src={src}
        title={title}
        style={`height: ${height};`}
        class="pdf-frame"
      />
    </div>
  ) : (
    <div class="unavailable">
      <div class="unavailable-icon">ðŸ“„</div>
      <span class="unavailable-text">PDF Unavailable</span>
      <span class="unavailable-hint">{title}</span>
    </div>
  )
}

<style>
  .pdf-container {
    border: 1px solid #e2e8f0;
    border-radius: 0.5rem;
    overflow: hidden;
    background: white;
  }

  .pdf-header {
    background: #f8fafc;
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: #475569;
    border-bottom: 1px solid #e2e8f0;
  }

  .pdf-frame {
    width: 100%;
    border: none;
  }

  .unavailable {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 3rem 2rem;
    background: #f8fafc;
    border: 2px dashed #cbd5e1;
    border-radius: 0.5rem;
    text-align: center;
  }

  .unavailable-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
    opacity: 0.5;
  }

  .unavailable-text {
    font-size: 1rem;
    font-weight: 600;
    color: #64748b;
  }

  .unavailable-hint {
    font-size: 0.75rem;
    color: #94a3b8;
    margin-top: 0.5rem;
  }
</style>
