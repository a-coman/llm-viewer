---
interface Props {
  code: string;
  height?: string;
}

const { code, height = "400px" } = Astro.props;

// Simple syntax highlighting for .soil files
function highlightSoil(code: string): string {
  return (
    code
      // Comments first (to avoid highlighting inside comments)
      .replace(/(--.*$)/gm, '<span class="comment">$1</span>')
      // Strings (handle escaped quotes)
      .replace(
        /'(?:[^'\\]|\\.)*'/g,
        (match) => `<span class="string">${match}</span>`
      )
      // Keywords
      .replace(
        /\b(new|insert|delete|set|destroy|create|between|and|for|in|do|end|if|then|else|endif|into)\b/g,
        '<span class="keyword">$1</span>'
      )
      // Booleans
      .replace(/\b(true|false)\b/g, '<span class="boolean">$1</span>')
      // Numbers (but not inside already-highlighted spans)
      .replace(
        /(?<![">])\b(\d+\.?\d*)\b(?![^<]*<\/span>)/g,
        '<span class="number">$1</span>'
      )
  );
}

const highlightedCode = highlightSoil(code || "");
---

<div class="soil-viewer" style={`height: ${height};`}>
  <pre class="code-block"><code set:html={highlightedCode} /></pre>
</div>

<style>
  .soil-viewer {
    display: flex;
    flex-direction: column;
    background: #1e1e2e;
    overflow: hidden;
    width: 100%;
  }

  .code-block {
    margin: 0;
    padding: 1rem;
    font-family: "Fira Code", "Consolas", monospace;
    font-size: 0.8rem;
    line-height: 1.5;
    color: #cdd6f4;
    flex: 1 1 auto;
    overflow: auto;
    width: 100%;
  }

  .code-block :global(.keyword) {
    color: #cba6f7;
    font-weight: 500;
  }

  .code-block :global(.class) {
    color: #89b4fa;
  }

  .code-block :global(.string) {
    color: #a6e3a1;
  }

  .code-block :global(.number) {
    color: #fab387;
  }

  .code-block :global(.comment) {
    color: #6c7086;
    font-style: italic;
  }

  .code-block :global(.boolean) {
    color: #f9e2af;
  }
</style>
